<section class="books">

  <% books.forEach((oneBook) => { %>


    <div class="oneBookInfo">

      <div class="oneBookImg">
        <img src="<%= oneBook.img_path %>" alt="<%= oneBook.img_name %>" />
      </div>

      <br>

      <div class="information">
        <h5>Title: <%= oneBook.title %></h5>
        <p>Author: <%= oneBook.author %> </p>
        <button><a href="/books/<%= oneBook._id %>">Playlist</a></button>

        <form action="/books/<%= oneBook._id %>/delete" method="POST">
          <button type="submit">Delete Book</button>
        </form>

        <form action="/books/<%= oneBook._id %>/edit" method="GET">
          <button type="submit">Edit Book</button>
        </form>
      </div>

    </div>

  <% }) %>
</section>
